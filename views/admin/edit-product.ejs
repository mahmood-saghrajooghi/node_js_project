<%- include('../includes/head.ejs') %>

<link rel="stylesheet" href="/css/product.css">
</head>

<body>
  <%- include('../includes/navigation.ejs') %>


  <main>
    <form action="/admin/<% if(editing) {%>edit-product<% } else { %>add-product<% } %>" method="post"
      class="product-form">
      <div class="form-control">
        <label for="title">Title</label>
        <input type="text" name="title" id="title" value="<%= editing ? product.title : '' %>" />
      </div>
      <div class="form-control">
        <label for="imageUrl">imageUrl</label>
        <input type="text" name="imageUrl" id="imageUrl" value="<%= editing ? product.imageUrl : '' %>" />
      </div>
      <div class="form-control">
        <label for="price">Price</label>
        <input type="text" name="price" id="price" value="<%= editing ? product.price : '' %>" />
      </div>
      <div class="form-control">
        <label for="description">Description</label>
        <textarea name="description" id="description"><%= editing ? product.description : '' %></textarea>
      </div>
      <% if (editing) { %>
        <input type="hidden" name="productId" value="<%= product._id %>" />
      <% } %>
      <button type="submit"><% if(editing) {%> Update Product <% } else { %> Add Product <% } %></button>
    </form>
  </main>
  <%- include('../includes/end.ejs') %>